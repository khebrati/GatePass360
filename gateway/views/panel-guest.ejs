<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>پنل مهمان | GatePass360</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/panel-guest.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <!-- نوار بالا -->
    <nav class="navbar">
        <div class="container">
            <div class="logo">
                <i class="fas fa-door-closed"></i>
                <a href="/" style="text-decoration: none; color: inherit;">
                    GatePass<span class="highlight">360</span>
                </a>
            </div>
            <div class="nav-links">
                <a href="/">خانه</a>
            </div>
        </div>
    </nav>

    <!-- پنل مهمان -->
    <div class="panel-container">
        <!-- هدر پنل -->
        <div class="panel-header">
            <div class="user-info">
                <div class="user-icon">
                    <i class="fas fa-user"></i>
                </div>
                <div>
                    <h3 id="userName">مهمان</h3>
                    <p style="color: #666; font-size: 0.9rem;">👤 نقش: مهمان</p>
                </div>
            </div>
            <button class="logout-btn" id="logoutBtn">
                <i class="fas fa-sign-out-alt"></i> خروج
            </button>
        </div>
        
        <!-- کارت ثبت درخواست جدید -->
        <div class="card">
            <h2 class="card-title">ثبت درخواست ورود جدید</h2>
            <form class="request-form" id="newRequestForm">
                <div class="form-group">
                    <label>ایمیل میزبان</label>
                    <input type="email" class="form-control" placeholder="host@example.com" required>
                </div>
                
                <div class="form-group">
                    <label>هدف مراجعه</label>
                    <select class="form-control" required>
                        <option value="">انتخاب کنید</option>
                        <option value="meeting">جلسه کاری</option>
                        <option value="interview">مصاحبه</option>
                        <option value="delivery">تحویل مدارک</option>
                        <option value="visit">بازدید</option>
                        <option value="other">سایر</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label>توضیحات</label>
                    <textarea class="form-control" rows="3" placeholder="توضیحات تکمیلی..."></textarea>
                </div>
                
                <div class="form-group">
                    <label>تاریخ مراجعه</label>
                    <input type="date" class="form-control" required>
                </div>
                
                <button type="submit" class="btn-primary" style="align-self: flex-start;">
                    <i class="fas fa-paper-plane"></i> ارسال درخواست
                </button>
            </form>
        </div>
        
        <!-- کارت درخواست‌های من -->
        <div class="card">
            <h2 class="card-title">درخواست‌های من</h2>
            <table class="requests-table">
                <thead>
                    <tr>
                        <th>تاریخ</th>
                        <th>میزبان</th>
                        <th>هدف</th>
                        <th>وضعیت</th>
                        <th>توضیحات</th>
                    </tr>
                </thead>
                <tbody id="myRequests">
                    <!-- با JS پر می‌شود -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Scripts -->
    <script src="/javascripts/auth.js"></script>
    <script src="/javascripts/panel.js"></script>
    <script>
        // Initialize panel
        (async function() {
            const user = await initPanel(['guest'], function(user) {
                // Display user info
                displayUserInfo(user);
            });
        })();
    </script>
    <!-- Guest Panel specific script - calls API after page load -->
    <script src="/javascripts/panel-guest.js"></script>
</body>
</html>