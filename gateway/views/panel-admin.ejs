<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>پنل مدیر | GatePass360</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/panel-admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <!-- نوار بالا -->
    <nav class="navbar">
        <div class="container">
            <div class="logo">
                <i class="fas fa-door-closed"></i>
                <a href="/" style="text-decoration: none; color: inherit;">
                    GatePass<span class="highlight">360</span>
                </a>
            </div>
            <div class="nav-links">
                <a href="/">خانه</a>
            </div>
        </div>
    </nav>

    <!-- پنل مدیر -->
    <div class="panel-container">
        <div class="panel-header">
            <div class="user-info">
                <div class="user-icon">
                    <i class="fas fa-cog"></i>
                </div>
                <div>
                    <h3 id="userName">مدیر سیستم</h3>
                    <p style="color: #666; font-size: 0.9rem;">👑 نقش: مدیر</p>
                </div>
            </div>
            <div>
                <button class="refresh-btn" onclick="AdminPanel.refresh()">
                    <i class="fas fa-sync-alt"></i> بروزرسانی
                </button>
                <button class="logout-btn" id="logoutBtn">
                    <i class="fas fa-sign-out-alt"></i> خروج
                </button>
            </div>
        </div>

        <!-- کارت آمار -->
        <div class="card">
            <h2 class="card-title">آمار سیستم</h2>
            <div class="stats-grid">
                <div class="stat-box">
                    <h3><i class="fas fa-users"></i> کل کاربران</h3>
                    <div class="stat-number" id="totalUsers">۰</div>
                </div>
                <div class="stat-box">
                    <h3><i class="fas fa-clipboard-list"></i> درخواست‌های امروز</h3>
                    <div class="stat-number" id="todayRequests">۰</div>
                </div>
                <div class="stat-box">
                    <h3><i class="fas fa-user-check"></i> افراد حاضر</h3>
                    <div class="stat-number" id="currentVisitors">۰</div>
                </div>
                <div class="stat-box">
                    <h3><i class="fas fa-sign-in-alt"></i> ورود امروز</h3>
                    <div class="stat-number" id="todayCheckIns">۰</div>
                </div>
                <div class="stat-box">
                    <h3><i class="fas fa-calendar-week"></i> ورود هفته اخیر</h3>
                    <div class="stat-number" id="weekCheckIns">۰</div>
                </div>
            </div>
        </div>

        <!-- کارت افراد حاضر در مجموعه -->
        <div class="card">
            <h2 class="card-title">
                افراد حاضر در مجموعه
            </h2>
            <table class="requests-table">
                <thead>
                    <tr>
                        <th>مهمان</th>
                        <th>میزبان</th>
                        <th>کد مجوز</th>
                        <th>زمان ورود</th>
                        <th>هدف</th>
                    </tr>
                </thead>
                <tbody id="presentPeopleList">
                    <!-- پر می‌شود -->
                </tbody>
            </table>
        </div>

        <!-- کارت مدیریت کاربران -->
        <div class="card">
            <h2 class="card-title">مدیریت کاربران</h2>
            <table class="requests-table">
                <thead>
                    <tr>
                        <th>نام</th>
                        <th>ایمیل</th>
                        <th>تغییر نقش</th>
                        <th>تاریخ ثبت‌نام</th>
                        <th>نقش فعلی</th>
                    </tr>
                </thead>
                <tbody id="usersList">
                    <!-- پر می‌شود -->
                </tbody>
            </table>
        </div>

        <!-- کارت تمام درخواست‌ها -->
        <div class="card">
            <h2 class="card-title">تمام درخواست‌های ورود</h2>
            <table class="requests-table">
                <thead>
                    <tr>
                        <th>مهمان</th>
                        <th>میزبان</th>
                        <th>تاریخ</th>
                        <th>هدف</th>
                        <th>وضعیت</th>
                        <th>تأیید کننده</th>
                        <th>کد مجوز</th>
                    </tr>
                </thead>
                <tbody id="allVisitsList">
                    <!-- پر می‌شود -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Scripts -->
    <script src="/javascripts/auth.js"></script>
    <script src="/javascripts/panel.js"></script>
    <script src="/javascripts/panel-admin.js"></script>
    <script>
        // Initialize panel
        (async function() {
            const user = await initPanel(['admin'], function(user) {
                // Display user info
                displayUserInfo(user);
            });
        })();
    </script>
</body>
</html>

