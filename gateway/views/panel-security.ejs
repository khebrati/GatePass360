<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>پنل حراست | GatePass360</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/panel-security.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <!-- نوار بالا -->
    <nav class="navbar">
        <div class="container">
            <div class="logo">
                <i class="fas fa-door-closed"></i>
                <a href="/" style="text-decoration: none; color: inherit;">
                    GatePass<span class="highlight">360</span>
                </a>
            </div>
            <div class="nav-links">
                <a href="/">خانه</a>
            </div>
        </div>
    </nav>

    <!-- پنل حراست -->
    <div class="panel-container">
        <div class="panel-header">
            <div class="user-info">
                <div class="user-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <div>
                    <h3 id="userName">حراست</h3>
                    <p style="color: #666; font-size: 0.9rem;">🛡️ نقش: حراست</p>
                </div>
            </div>
            <button class="logout-btn" id="logoutBtn">
                <i class="fas fa-sign-out-alt"></i> خروج
            </button>
        </div>

        <!-- کارت درخواست‌های تأیید شده -->
        <div class="card">
            <h2 class="card-title">درخواست‌های در انتظار تأیید حراست</h2>
            <table class="requests-table">
                <thead>
                    <tr>
                        <th>مهمان</th>
                        <th>میزبان</th>
                        <th>تاریخ</th>
                        <th>هدف</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody id="approvedRequests">
                    <!-- پر می‌شود -->
                </tbody>
            </table>
        </div>

        <!-- کارت ثبت ورود/خروج -->
        <div class="card">
            <h2 class="card-title">ثبت ورود و خروج</h2>
            <div class="checkin-section">
                <div class="checkin-box">
                    <h3><i class="fas fa-sign-in-alt"></i> ورود مهمان</h3>
                    <form id="checkinForm">
                        <input type="text" placeholder="کد مجوز" class="form-control" style="margin-bottom: 10px;">
                        <button type="submit" class="btn-primary">ثبت ورود</button>
                    </form>
                </div>

                <div class="checkin-box">
                    <h3><i class="fas fa-sign-out-alt"></i> خروج مهمان</h3>
                    <form id="checkoutForm">
                        <input type="text" placeholder="کد مجوز" class="form-control" style="margin-bottom: 10px;">
                        <button type="submit" class="btn-primary">ثبت خروج</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="/javascripts/auth.js"></script>
    <script src="/javascripts/panel.js"></script>
    <script src="/javascripts/panel-security.js"></script>
    <script>
        // Initialize panel
        (async function() {
            const user = await initPanel(['security'], function(user) {
                // Display user info
                displayUserInfo(user);
            });
        })();
    </script>
</body>
</html>

